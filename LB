frontend lstnr_florida
    bind :3307
    use_backend db_florida
   
backend db_florida
    default-server maxconn 300
    server db01 192.168.50.11:3306 check
    server db02 192.168.50.12:3306 check backup
    server db03 192.168.50.13:3306 check backup
   
